@model List<Homework_SkillTree.Models.IncomeTableViewModel>


@{
    ViewData["Title"] = "Home Page";

    // var incomeList = TempData["TableData"] != null
    //     ? JsonSerializer.Deserialize<List<IncomeTableViewModel>>(TempData.Peek("TableData") as string)
    //     : new List<IncomeTableViewModel>();

    // // 👇重點！告訴 TempData 不要被下一個 Request 清掉
    // TempData.Keep("TableData");

}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-12 d-flex justify-content-end">
            <a href="@Url.Action("Add", "Home")" class="btn btn-primary">
                <i class="bi bi-plus"></i> 新增記帳
            </a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h2>收支紀錄</h2>
            @if (Model.Count>0)
            {
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>類別</th>
                            <th>日期</th>
                            <th>金額</th>
                            <th>備註</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int serialNumber = 0; // 初始化序號
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(++serialNumber)</td>
                                <td>@item.sType</td>
                                <td>@item.sDate.ToString("yyyy/MM/dd")</td>
                                <td>@item.Amount.ToString("C")</td>
                                <td>@item.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <strong>注意：</strong>目前沒有任何收支紀錄。
                </div>
            }
        </div>
    </div>
</div>
